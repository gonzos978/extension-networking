<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="basic-example" package="basic-example" version="1.0.0" company="" />

	<!-- output -->
	<app main="Main" file="basic-example" path="bin" />

	<window background="#1a1a1a" fps="60" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />

	<!-- classpath, haxe libs -->
	<source path="src" />

	<haxelib name="openfl" />
  <haxelib name="extension-networking" />

	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />

  <!-- other -->
  <haxedef name="network_logging" />
  <haxedef name="network_logging_with_backtrace" />
</project>
